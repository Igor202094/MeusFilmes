<% include ../partials/header %>
    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Editar Filme</h2>
            <form method="post"> 
                <div class="form-group">
                    <label for="name">Nome do Filme</label>
                    <input value="<%= filme.name %>" name="name" type="text" class="form-control" placeholder="Digite o nome do filme">
                    <small id="nameHelp" class="form-text text-muted">Nome do filme a ser salvo.</small>
                    <% if(errors && errors.indexOf('name') >= 0) { %>
                        <small id="nameHelp" class="form-text text-muted">Por gentileza, informe o nome do filme.</small>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for="status">Situação: </label>
                    <select class="form-control" id="status" name="status">
                        <% labels.forEach( label => { %>
                            <option value="<%= label.id %>" <% if(label.id === filme.status) { %> selected="selected" <% } %>><%= label.name %></option><!-- captura o que esta no banco -->
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </section>
<% include ../partials/footer %>