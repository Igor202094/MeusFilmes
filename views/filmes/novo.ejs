<% include ../partials/header %>
    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Novo Filme</h2>
            <form method="post"> 
                <div class="form-group">
                    <label for="name">Nome do Filme</label>
                    <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="nameHelp" placeholder="Digite o nome do filme">
                    <small id="nameHelp" class="form-text text-muted">Nome do filme a ser salvo.</small>
                    <% if(errors && errors.indexOf('name') >= 0) { %>
                        <small id="nameHelp" class="form-text text-muted">Por gentileza, informe o nome do filme.</small>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for="status">Situação: </label>
                    <select class="form-control" id="status" name="status">
                        <option value="to-watch">Para assistir</option><!-- captura o que esta no banco -->
                        <option value="watching">Assistindo</option>
                        <option value="watched">Assistido</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </section>
<% include ../partials/footer %>